extends layout

block content

  form(method="POST" action=`/users/${user.id}`)
    input(type="text" name="username" placeholder="User Name" value=`${user.username}`)
    br
    input(type="text" name="location" placeholder="location" value=`${user.location}`)
    br
    textarea(cols="60" rows="7" name="bio" placeholder="Biography")= user.bio
    br
    input(type="text" name="email" placeholder="email" value=`${user.email}`)
    br
    input(type="text" name="phone" placeholder="Phone Number" value=`${user.phone_number}`)
    br
    textarea(cols="60" rows="7" name="info" placeholder ="house Information")= user.house_info
    br
    button(type="submit") Edit User