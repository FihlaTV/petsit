extends layout

block content
	.login
		if !cookies
			form(method="POST" action="/login")
				input(type="text" name="login")
				input(type="password" name="password")
				button(type="submit") Login!
			a(href="/users/add") Create a New User
		else
			a(href='/logout') Logout

	.requests
		h1 Requests
		each request in passinData
			.request
				.dog-info
					.dog-picture
					.dog-text
						.dog-name-and-rating
							h2 #{request.pet_name} 
								span |
								|
								img(src='/image/5-stars.png')
						.request-body
							p.notes= request.notes
							p.dates #{request.start_date} to #{request.end_date}
				.requester-info
					.posted-by
						p Posted by &nbsp;
							|
							a(href=`/users/${request.poster_id}/`)= request.username
					.view-request
						button
							a(href=`/requests/${request.id}`) View Request

				hr

		a(href="/requests/add") Add New Request
