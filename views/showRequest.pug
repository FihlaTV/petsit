extends layout

block content

  p= request.username
  p= request.pet_name
  p= request.notes
  p= request.start_date
  p= request.end_date
  br

  if request.accepted_user_id != null
    each person in user
      if person.id == request.accepted_user_id
        p= person.username
  else
    .comment-container
      each comment in passinData
        .comment
          if cookie == request.poster_id
            form(action="/requests/accept" method="POST")
              input(type="hidden" value=`${comment.user_id}` name="accepted")
              input(type="hidden" value=`${request.id}` name="request")
              button(type="submit") Accept!
          p= comment.username
          p= comment.comment_body

    if cookie
      form#add-comment(method='POST' action='/comments')
        input#comment-user(type='hidden' name='user_id' value=`${cookie}`)
        input#comment-request(type='hidden' name='post_id' value=`${request.id}`)
        textarea#comment(cols="60" rows="7" name="comment" placeholder="Add a comment")
        br
        button#comment-button(type='submit') Add comment



    
