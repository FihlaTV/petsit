extends layout

block content
  .pet-page
    .pet-header
      h1= pet.pet_name
      div.line
      p Owned by 
        |
        a(href=`/users/${pet.owner_id}`) #{pet.username}
        | , #{pet.location} 
    


    if starAve == 5
      img(src="/image/5-stars.png")
    else if starAve == 4
      img(src="/image/4-stars.png")
    else if starAve == 3
      img(src="/image/3-stars.png")
    else if starAve == 2
      img(src="/image/2-stars.png")
    else if starAve == 1
      img(src="/image/1-star.png")
    else
      img(src="/image/0-stars.png")
    h3 I am a #{pet.temperament} #{pet.species} owned by #{pet.username}
    h3 #{pet.location}
    img(src=`${pet.pic_url}`)
    br
    h2 Bio:
    h4 #{pet.bio}
    br
    h2 Notes:
    h4 #{pet.notes}

    if cookie == pet.user_id
      a(href=`/pets/${pet.id}/edit`) Edit
      form(method='post' action=`/pets/${pet.id}/delete`)
        button(type='submit') Delete Pet
    br
    each review in reviews
      table
       tr
         th name
         th data
         th rating
       br
       tr
         td= review.username
         td= review.review
         td
           if review.rating == 5
             img(src="/image/5-stars.png")
           else if review.rating == 4
             img(src="/image/4-stars.png")
           else if review.rating == 3
             img(src="/image/3-stars.png")
           else if review.rating == 2
             img(src="/image/2-stars.png")
           else if review.rating == 1
             img(src="/image/1-star.png")
           else
             img(src="/image/0-stars.png")
    br
    if cookie && cookie != pet.user_id
      form(method='POST' action='/pet_reviews')
        input(type='hidden' name='poster_id' value=`${cookie}`)
        input(type='hidden' name='pet_id' value=`${pet.id}`)
        input(type='number' name='rating' min='0' max='5' placeholder='Rating')
        br
        textarea(cols="60" rows="7" name="review" placeholder="Add a review")
        br
        button(type='submit') Add review
